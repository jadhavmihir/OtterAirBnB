<% layout('/layouts/boilerplate') -%>

<div class="row">
    <h1 class="col-6 offset-3 mt-3 mb-3">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">

        <form method="POST" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username:</label>
                <input name="username" 
                    id="username",
                    class="form-control",
                    required,
                    type="text">

                    <div class="valid-feedback"> Looks good!</div>
                    <div class="invalid-feedback">Please enter a valid username</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email Id:</label>
                <input name="email" 
                    id="email",
                    class="form-control",
                    required,
                    type="text">

                    <div class="valid-feedback"> Looks good!</div>
                    <div class="invalid-feedback">Please enter a valid email id</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input name="password" 
                    id="password",
                    class="form-control",
                    required,
                    type="password">

                    <div class="valid-feedback"> Looks good!</div>
                    <div class="invalid-feedback">Please enter a valid username</div>
            </div>
            <button class="btn btn-success mb-3">Sign Up</button>
        </form>

    </div>
</div>